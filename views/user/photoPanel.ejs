<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
<%- include('../partials/header') %>
	<div class="container-fluid mt-5" id="photoPanelContainer">
		<div class="container" id="photoPanelContent">
			<div class="row">
				<div class="col" id="someStuff">
					
				</div>
				<div class="col border left-col" id="photoPanel">
					<% if (currentUser) { %> 
						<h1>Hello <%= currentUser.firstName %> </h1>
					<% } else { %> 
						<h1>Hello User</h1>
					<% } %> 
	
					<div class="row mt-5">
						<div class="col"><h3>Choose Image</h3></div>
						<div class="col">
							<div class="dropdown">
								<h3 class="dropdown-toggle" type="button" id="photoPanelDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									Stored Photos
								</h3>
								<ul class="dropdown-menu w-100" id="photoDropdown" aria-labelledby="photoPanelDropdown">
									<% photos.forEach(photos => { %>
									<li class="dropdown-item"><%= photos.name %> </li>	
									<% }) %> 
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>



			<div class="row h-50 text-center mt-5">
				<div class="col">
					
				</div>
				<div class="col border">
					<img id="previewImage" src="" alt="">
				</div>
			</div>
		</div>	
	</div>
<%- include('../partials/footer') %>
</body>
</html>